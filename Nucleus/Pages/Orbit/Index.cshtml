@page
@model IndexModel

@{
    ViewData["Title"] = "Your Connections";
}




    <section class="section-block style1">
        <header>
            <h2>@ViewData["Title"]</h2>

            <h4>These are the connections you&rsquo;ve made</h4>
            <hr />
        </header>
        <div class="inner">


            <div class="row">
                <div class="large-4 medium-4 columns">
                    <section>
                        <h3>Offers</h3>
                        <hr>
                        <ul>
                            @foreach(var offer in Model.Offers)
                            {
                                <li>@offer.Title</li>
                            }                            
                        </ul>
                        <div class="panel">
                            <a class="button default" asp-page="Offer">Create an offer</a>
                        </div>
                    </section>
                </div>
                <div class="large-6 medium-6 columns col-md-offset-2">
                    <section>
                        <h3>Requests</h3>
                        <hr />
                        <ul>
                            @foreach(var request in Model.Requests)
                            {
                                <li>@request.Title</li>
                            }
                        </ul>
                        <div class="panel">
                            <a class="button default" href="#">Make a request</a>
                        </div>
                    </section>
                </div>
            </div>

        </div>
    </section>


@section Scripts {
    @await  Html.PartialAsync("_ValidationScriptsPartial")
}
