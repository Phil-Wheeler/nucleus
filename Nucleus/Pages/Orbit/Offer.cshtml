@page
@model OfferModel

@{
    ViewData["Title"] = "Your Offers";
}




    <section class="section-block style1">
        <header>
            <h2>@ViewData["Title"]</h2>

            <h4>These are the offers you&rsquo;ve extended to others</h4>
            <hr />
        </header>
        <div class="inner">


            <div class="row">
                <div class="large-4 medium-4 columns">
                    <section>
                        <h3>Offers</h3>
                        <hr>
                        <form method="post" id="offerForm">
                            <div class="form-group">
                                <label asp-for="Input.Title"></label>
                                <input asp-for="Input.Title" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Description"></label>
                                <input asp-for="Input.Description" class="form-control" />
                                <span asp-validation-for="Input.Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Ends"></label>
                                <input asp-for="Input.Ends" class="form-control" />
                                <span asp-validation-for="Input.Ends" class="text-danger"></span>
                            </div>
                            <button type="submit" class="button small">Save</button>
                        </form>
                        <div class="panel">
                            <a class="button default" asp-page="Offer">Create an offer</a>
                        </div>
                    </section>
                </div>
                <div class="large-6 medium-6 columns col-md-offset-2">
                    <section>
                        <h3>Requests</h3>
                        <hr />
                        <div class="panel">
                            <a class="button default" href="#">Make a request</a>
                        </div>
                    </section>
                </div>
            </div>

        </div>
    </section>


@section Scripts {
    @await  Html.PartialAsync("_ValidationScriptsPartial")
}
